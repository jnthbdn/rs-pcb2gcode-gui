<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="FrameOutline" parent="GtkBox">
        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <style>
            <class name="main_container"/>
        </style>
        <child>
            <object class="GtkFrame">
                <property name="label" translatable="true">General</property>
                <child>
                    <object class="GtkGrid">
                        <property name="row-homogeneous">false</property>
                        <property name="column-spacing">8</property>
                        <property name="row-spacing">8</property>

                        <!-- Select tool -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">Tool</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">0</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="SelectToolObject">
                                <property name="hexpand">true</property>
                                <property name="show_drill">false</property>
                                <property name="show_vbit">false</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">0</property>
                                </layout>
                            </object>
                        </child>

                        <!-- Depth -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">Depth</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">1</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="SpinButtonObject">
                                <property name="hexpand">true</property>
                                <property name="digits">3</property>
                                <property name="min">0.0</property>
                                <property name="max">100.0</property>
                                <property name="step">0.1</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">1</property>
                                </layout>
                            </object>
                        </child>

                        <!-- Outline side -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">Ouline side</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">2</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="GtkDropDown" id="dropdown">
                                <property name="model">
                                    <object class="GtkStringList" id="model">
                                        <items>
                                            <item translatable="true">Auto</item>
                                            <item translatable="true">Front</item>
                                            <item translatable="true">Back</item>
                                        </items>
                                    </object>
                                </property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">2</property>
                                </layout>
                            </object>
                        </child>

                        <!-- fill outline -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">Fill outline</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">3</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="GtkCheckButton">
                                <property name="active">true</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">3</property>
                                </layout>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkFrame">
                <property name="label" translatable="true">Bridges</property>
                <child>
                    <object class="GtkGrid">
                        <property name="row-homogeneous">false</property>
                        <property name="column-spacing">8</property>
                        <property name="row-spacing">8</property>

                        <!-- Enable bridges -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">Enable bridges</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">0</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="GtkCheckButton">
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">0</property>
                                </layout>
                            </object>
                        </child>

                        <!-- Bridges number -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">Number</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">1</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="SpinButtonObject">
                                <property name="hexpand">true</property>
                                <property name="digits">0</property>
                                <property name="min">0</property>
                                <property name="max">100</property>
                                <property name="step">1</property>
                                <property name="step">2</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">1</property>
                                </layout>
                            </object>
                        </child>

                        <!-- Bridge Depth -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">Depth</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">3</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="SpinButtonObject">
                                <property name="hexpand">true</property>
                                <property name="digits">3</property>
                                <property name="min">0.0</property>
                                <property name="max">100.0</property>
                                <property name="step">0.1</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">3</property>
                                </layout>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkFrame">
                <property name="label" translatable="true">G-Code</property>
                <child>
                    <object class="GtkGrid">
                        <property name="row-homogeneous">false</property>
                        <property name="column-spacing">8</property>
                        <property name="row-spacing">8</property>

                        <!-- No G91.1 -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">No G91.1</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">0</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="GtkCheckButton">
                                <property name="active">true</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">0</property>
                                </layout>
                            </object>
                        </child>

                        <!-- No G81 -->
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="true">No G81</property>
                                <property name="halign">GTK_ALIGN_START</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">1</property>
                                </layout>
                            </object>
                        </child>
                        <child>
                            <object class="GtkCheckButton">
                                <property name="active">true</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">1</property>
                                </layout>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>